{
    "apps": [
        {
            "name": "linhungdien-app",
            "script": "artisan",
            "args": "serve --host=0.0.0.0 --port=8000",
            "cwd": "/var/www/html/linhungdien",
            "interpreter": "php",
            "instances": 1,
            "exec_mode": "fork",
            "watch": false,
            "autorestart": true,
            "max_restarts": 10,
            "min_uptime": "10s",
            "max_memory_restart": "500M",
            "env": {
                "NODE_ENV": "production",
                "APP_ENV": "production"
            },
            "error_file": "/var/www/html/linhungdien/storage/logs/pm2-error.log",
            "out_file": "/var/www/html/linhungdien/storage/logs/pm2-out.log",
            "log_file": "/var/www/html/linhungdien/storage/logs/pm2-combined.log",
            "time": true
        }
    ]
}
